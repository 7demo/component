#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , component = require('..')
  , utils = component.utils;

// parse argv

program
  .usage('<query>')
  .parse(process.argv);

// <query> required

if (!program.args.length) utils.fatal('<query> required');

// query

var query = program.args[0];

// search

component.search(query, function(err, pkgs){
  if (err) utils.fatal(err.message);
  if (!pkgs || !pkgs.length) return;
  console.log();
  pkgs.forEach(function(pkg){
    utils.log(pkg.name, pkg.description);
  });
  console.log();
});