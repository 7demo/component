#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , component = require('..')
  , spawn = require('child_process').spawn
  , fs = require('fs')
  , exists = fs.existsSync;

// usage

program.usage('<command> [options]');

// sub-command help

program.on('--help', function(){
  console.log('  Commands:');
  console.log();
  console.log('    install <name ...>  install one or more components');
  console.log('    search [query]      search with the given query');
  console.log('    info [prop]         output json component information');
  console.log('    ls                  list installed components');
  console.log();
  process.exit();
});

// parse argv

program.parse(process.argv);

// command

var cmd = __dirname + '/component-' + program.args[0];

// args void of cmd

var args = process.argv.slice(3);

// display help

if (!program.args[0]) {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
  process.exit();
}

// doesn't exist

if (!exists(cmd)) {
  component.fatal('the "' + program.args[0] + '" command does not exist');
}

// exec command

var proc = spawn(cmd, args);
proc.stdout.pipe(process.stdout);
proc.stderr.pipe(process.stderr);
proc.on('exit', process.exit);
