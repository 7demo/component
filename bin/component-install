#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , mkdir = require('mkdirp')
  , component = require('..');

// options

program
  .option('-o, --out <dir>', 'output components to the given <dir>')

// parse argv

program.parse(process.argv);

// install

console.log();
program.args.forEach(function(pkg){
  var dest = program.out || 'components';
  mkdir(dest);

  pkg = component.install(pkg, dest);

  component.log('install', pkg.name + '@' + pkg.version);
  pkg.install();

  pkg.on('error', function(err){
    console.error(err.stack);
  });

  pkg.on('file', function(file){
    component.log('fetch', pkg.name + ':' + file);
  });

  pkg.on('end', function(){
    component.log('complete', pkg.name);
  });
});

